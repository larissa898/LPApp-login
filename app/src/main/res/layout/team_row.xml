<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/list_relative"
            android:layout_width="527dp"
            android:layout_height="70dp"
            >

            <TableRow
                android:paddingTop="20dp"
                android:id="@+id/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nume_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nume"
                    />

                <EditText
                    android:id="@+id/numeAngajat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <CheckBox

                    android:id="@+id/checkAngajat"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignBottom="@+id/table_row" />
            </TableRow>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Add_new_employee"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/list_relative"
        android:paddingTop="80dp"
        android:text="@string/add_employee" />

    <Button
        android:id="@+id/Ok"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:text="@string/ok_button"


        />
</LinearLayout>